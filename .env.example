# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# PostgreSQL
# Local:     postgresql://user:password@localhost:5432/bothub
# Supabase:  postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://user:password@localhost:5432/bothub

# Redis
# Local:   redis://localhost:6379
# Upstash: rediss://default:[password]@[host].upstash.io:6379
